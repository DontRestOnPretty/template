{
  "name": "@fabiospampinato/template",
  "version": "1.0.1",
  "description": "A super-simple way to create new projects based on templates.",
  "bin": "dist/bin/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage .nyc_output",
    "clean": "npm run clean:dist && npm run clean:coverage",
    "compile": "tsc --skipLibCheck",
    "compile:watch": "tsc --skipLibCheck --watch",
    "lint": "tslint \"src/**/*.ts*\" --force",
    "test": "ava",
    "test:watch": "ava --watch",
    "coverage": "nyc --reporter=html ava",
    "report": "nyc report",
    "report:html": "open coverage/index.html",
    "prepublish": "npm run clean && npm run lint && npm run compile && npm run coverage"
  },
  "ava": {
    "files": [
      "test/handlebars.js",
      "test/repository.js",
      "test/template.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/fabiospampinato/template/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Fabio Spampinato",
    "email": "spampinabio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiospampinato/template.git"
  },
  "keywords": [
    "template",
    "scaffold",
    "handlebars",
    "cli",
    "simple"
  ],
  "dependencies": {
    "absolute": "0.0.1",
    "caporal": "git://github.com/Szpadel/Caporal.js.git#fix-help-def-command",
    "chalk": "^2.1.0",
    "consolidate": "^0.14.5",
    "del": "^3.0.0",
    "fs-finder": "^1.8.1",
    "handlebars": "^4.0.10",
    "inquirer": "^3.2.3",
    "is-directory": "^0.3.1",
    "is-url": "^1.2.2",
    "isbinaryfile": "^3.0.2",
    "load-json-file": "^3.0.0",
    "lodash": "^4.17.4",
    "metalsmith": "^2.3.0",
    "pify": "^3.0.0",
    "read-pkg-up": "^2.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.74",
    "@types/node": "^8.0.26",
    "ava": "^0.22.0",
    "ava-spec": "^1.1.0",
    "nyc": "^11.1.0",
    "rimraf": "^2.6.0",
    "tslint": "^4.4.2",
    "typescript": "~2.2.0"
  }
}
